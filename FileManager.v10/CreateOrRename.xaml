<Window x:Class="FileManager.v10.CreateOrRename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager.v10"
        mc:Ignorable="d"
        Height="200" Width="450" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock FontWeight="Bold" x:Name="userInput"></TextBlock>
        <TextBox x:Name="nameOfFile" Height="30" FontSize="22"></TextBox>
        <RadioButton IsChecked="True" Name="radioFile">Файл</RadioButton>
        <RadioButton Name="radioFolder">Папка</RadioButton>
        <Button Content="Готово" Click="CloseWindow" />
        <Button Content="Отмена" Click="CloseWithoutChanges" />
    </StackPanel>
</Window>
